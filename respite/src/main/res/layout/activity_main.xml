<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingEnd="8dp"
              android:paddingLeft="8dp"
              android:paddingRight="8dp"
              android:paddingStart="8dp">

    <TextView
        android:id="@+id/activity_main_frontpage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:text="@string/mainactivity.frontpage"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/commentIndent"/>

    <TextView
        android:id="@+id/activity_main_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:text="@string/mainactivity.all"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/commentIndent"/>

    <TextView
        android:id="@+id/activity_main_customsubreddit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:text="@string/mainactivity.customsubreddit"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/commentIndent"/>

    <TextView
        android:id="@+id/activity_main_customuser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:text="@string/mainactivity.customuser"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical"
            android:minHeight="?android:attr/listPreferredItemHeightSmall"
            android:text="@string/mainactivity.subscriptions"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:background="@color/commentIndent"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/activity_main_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:indeterminate="true"/>

</LinearLayout>